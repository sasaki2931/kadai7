<%= form_with(model: @share, local: true,url: choose_new_or_edit,url: confirm_shares_path) do |form| %>
  <% if @share.errors.any? %>
    <div id="error_explanation">
      <h2><%= @share.errors.count %>件のエラーがあります。</h2>
      <ul>

      <% @share.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="share_title">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>
  <div class="share_title">
    <%= form.label :content %>
    <%= form.text_field :content %>
  </div>
  <div class="field">
    <%= form.label :image %>
    <%= image_tag(share.image.url) if share.image && share.image.url %>
    <%= form.file_field :image %> 
    <%= form.hidden_field :image_cache %>
  </div>

  <%= form.submit %>
<% end %>

<%= link_to "ブログ一覧画面にもどる", shares_path %>
